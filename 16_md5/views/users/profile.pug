extends ../layouts/common
block content
  h1 Edit Information
  if errors
    each error in errors
      .alert.alert-danger=error
  form(action="/users/profile", method="POST",enctype="multipart/form-data")
    .form-group
      label.ml-2(for="avatar") Upload A New Avatar
      input#avatar.form-control-file.ml-2(type="file", name="avatar")
    button.col-12.btn.btn-primary.ml-2 Save
