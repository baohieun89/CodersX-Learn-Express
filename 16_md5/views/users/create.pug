extends ../layouts/common
block content
	h1 Create a New User
	if errors
		each error in errors
			.alert.alert-danger=error
	form(action="/users/create", method="POST",enctype="multipart/form-data")
		.form-group
			label.ml-2(for="name") Name
			input#name.form-control.ml-2(type="text", name="name", value = values ? values.name : "")
		.form-group
			label.ml-2(for="age") Age
			input#age.form-control.ml-2(type="text", name="age", value = values ? values.age : "")
		.form-group
			label.ml-2(for="email") Email
			input#email.form-control.ml-2(type="text", name="email", value = values ? values.email : "")
		.form-group
			label.ml-2(for="password") Password
			input#password.form-control.ml-2(type="password", name="password", value = values ? values.password : "")
		.form-group
			label.ml-2(for="avatar") Avatar
			input#avatar.form-control-file.ml-2(type="file", name="avatar")
		button.btn.btn-primary.ml-2 Create


