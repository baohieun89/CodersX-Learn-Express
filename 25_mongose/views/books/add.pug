extends ../layouts/common
block content
	h1 Add a new book
	if errors
		each error in errors
			.alert.alert-danger=error
	form(action="/books/add", method="POST",enctype="multipart/form-data")
		.form-group
			label.ml-2(for="title") Title
			input#name.form-control.ml-2(type="text", name="title")
		.form-group
			label.ml-2(for="desc") Description
			input#age.form-control.ml-2(type="text", name="desc")
		.form-group
			label.ml-2(for="cover") Book Cover
			input#avatar.form-control-file.ml-2(type="file", name="cover")
		button.btn.btn-primary.ml-2 Add